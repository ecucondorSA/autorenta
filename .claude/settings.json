{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "All"
    ],
    "deny": [],
    "ask": [],
    "permissionMode": "whitelist"
  },
  "ignorePatterns": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/.angular/**",
    "**/.next/**",
    "**/.nuxt/**",
    "**/coverage/**",
    "**/playwright-report/**",
    "**/test-results/**",
    "**/.git/**",
    "**/.cache/**",
    "**/.vscode/**",
    "**/.idea/**",
    "**/package-lock.json",
    "**/pnpm-lock.yaml",
    "**/yarn.lock",
    "**/*.log",
    "**/.DS_Store",
    "**/Thumbs.db"
  ],
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "600000",
    "BASH_MAX_TIMEOUT_MS": "1200000",
    "CLAUDE_BASH_NO_LOGIN": "false",
    "USE_BUILTIN_RIPGREP": "1",
    "CLAUDE_CODE_AUTO_CONNECT_IDE": "true",
    "NODE_OPTIONS": "--max-old-space-size=4096"
  },
  "spinnerTipsEnabled": true,
  "verbose": false,
  "cleanupPeriodDays": 30,
  "alwaysThinkingEnabled": false,
  "description": "Configuración de autonomía total para AutoRenta - LATAM optimizado con timeouts de 10/20 min",
  "toolUseTracking": true,
  "trackingFeatures": {
    "logToolUseId": true,
    "trackExecutionTime": true,
    "enableErrorTracking": true
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": {
          "patterns": [".*"]
        },
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/json-to-toon.mjs"
          }
        ]
      }
    ]
  },
  "toonOptimization": {
    "enabled": true,
    "minArrayLength": 3,
    "minReductionPercent": 15,
    "debug": true
  }
}
