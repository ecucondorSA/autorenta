{
  "mcpServers": {
    "TestSprite": {
      "command": "npx",
      "args": ["@testsprite/testsprite-mcp@latest"],
      "env": {
        "API_KEY": "{{TESTSPRITE_API_KEY}}"
      },
      "description": "TestSprite - AI-powered automated testing platform for E2E tests"
    },
    "cloudflare-builds": {
      "url": "https://builds.mcp.cloudflare.com/mcp",
      "transport": "streamble-http",
      "description": "Deploy and manage Cloudflare Pages and Workers builds"
    },
    "cloudflare-docs": {
      "url": "https://docs.mcp.cloudflare.com/mcp",
      "transport": "streamble-http",
      "description": "Quick reference for Cloudflare documentation"
    },
    "cloudflare-bindings": {
      "url": "https://bindings.mcp.cloudflare.com/mcp",
      "transport": "streamble-http",
      "description": "Manage Workers bindings (R2, KV, D1, AI, etc.)"
    },
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "Manage GitHub repos, issues, PRs, and more"
    },
    "postgres": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres",
        "postgresql://postgres:postgres@localhost:54322/postgres"
      ],
      "description": "Interact with Supabase PostgreSQL database (local)"
    },
    "brave-search": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-brave-search"
      ],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      },
      "description": "Search the web for documentation and resources"
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/home/edu/autorenta"
      ],
      "description": "Advanced file operations in AutoRenta project"
    },
    "git": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-git",
        "--repository",
        "/home/edu/autorenta"
      ],
      "description": "Advanced Git operations for AutoRenta repo"
    },
    "mercadopago": {
      "url": "https://mcp.mercadopago.com/mcp",
      "transport": "streamble-http",
      "headers": {
        "Authorization": "Bearer {{MERCADOPAGO_ACCESS_TOKEN}}"
      },
      "description": "Official MercadoPago MCP Server - Search docs, integrate payments with AI"
    },
    "gemini": {
      "command": "npx",
      "args": [
        "-y",
        "@aliargun/mcp-server-gemini"
      ],
      "env": {
        "GEMINI_API_KEY": "${GEMINI_API_KEY}"
      },
      "description": "Google Gemini AI integration - Use Gemini 2.5 models, vision, embeddings"
    },
    "google-maps": {
      "command": "npx",
      "args": [
        "-y",
        "@googlemaps/mcp-server-googlemaps"
      ],
      "env": {
        "GOOGLE_MAPS_API_KEY": "${GOOGLE_MAPS_API_KEY}"
      },
      "description": "Google Maps Platform - Geocoding, places, routes for AutoRenta location features"
    },
    "anthropic": {
      "command": "npx",
      "args": [
        "-y",
        "server-anthropic"
      ],
      "env": {
        "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}"
      },
      "description": "Anthropic Claude API - Call Claude models programmatically, list models, send messages"
    }
  }
}
