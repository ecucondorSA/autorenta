{
  "name": "claude-code-browser-control-bridge",
  "version": "1.0.0",
  "description": "Bridge server connecting Claude Code MCP with Chrome Extension",
  "main": "mcp-server.js",
  "type": "module",
  "scripts": {
    "start": "./start.sh",
    "stop": "./stop.sh",
    "bridge": "node bridge-server.js",
    "bridge:dev": "node --watch bridge-server.js",
    "mcp": "node mcp-server.js",
    "status": "curl -s http://localhost:9223/status | jq",
    "health": "curl -s http://localhost:9223/health | jq",
    "test": "node test-integration.mjs"
  },
  "keywords": [
    "browser-automation",
    "mcp",
    "chrome-extension",
    "websocket"
  ],
  "author": "AutoRenta Development",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "ws": "^8.16.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
