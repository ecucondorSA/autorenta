  "_documentation": {
    "description": "Workflow para manejar notificaciones de cambios de estado en bookings",
    "setup_instructions": [
      "1. Importar este workflow en n8n",
      "2. Configurar la credencial 'Supabase Service Key' con el header 'Authorization: Bearer {SERVICE_ROLE_KEY}'",
      "3. Configurar la variable de entorno SUPABASE_URL en n8n",
      "4. Activar el workflow",
      "5. Configurar el webhook URL en Supabase: N8N_WEBHOOK_URL=https://your-n8n.com/webhook/booking-status-change"
    ],
    "events_handled": [
      "booking_confirmed: Notifica a renter y owner",
      "booking_started: Notifica a renter (push)",
      "return_reminder: Notifica a renter (push + email + whatsapp)",
      "booking_completed: Notifica a renter y owner, solicita rese√±a"
