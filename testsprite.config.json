{
  "projectName": "AutorentA",
  "projectType": "frontend",
  "framework": "angular",
  "version": "17",
  "localPort": 4200,
  "testScope": "codebase",
  "needLogin": true,
  "credentials": {
    "username": "test+locatario@autorentar.com",
    "password": "TestPassword123!"
  },
  "baseUrl": {
    "development": "http://localhost:4200",
    "staging": "https://autorenta-web-preview.pages.dev",
    "production": "https://autorenta.com"
  },
  "testingStrategy": {
    "parallel": false,
    "maxConcurrent": 1,
    "retryOnFailure": 2,
    "timeout": 60000,
    "browser": {
      "type": "chrome",
      "connectOverCDP": true,
      "cdpPort": 9222,
      "wsEndpoint": "ws://localhost:9222/devtools/browser",
      "launchOptions": {
        "headless": false,
        "devtools": true,
        "slowMo": 250,
        "args": [
          "--disable-web-security",
          "--disable-features=VizDisplayCompositor",
          "--disable-popup-blocking",
          "--disable-background-timer-throttling",
          "--disable-renderer-backgrounding",
          "--enable-logging",
          "--v=1"
        ]
      },
      "viewport": {
        "width": 1920,
        "height": 1080
      },
      "screenshots": {
        "enabled": true,
        "onFailure": true,
        "onStep": true
      },
      "video": {
        "enabled": true,
        "mode": "retain-on-failure"
      }
    }
  },
  "excludePaths": [
    "node_modules",
    "dist",
    ".angular",
    "coverage",
    ".git",
    "docs"
  ],
  "criticalFlows": [
    "booking-flow",
    "wallet-deposit",
    "car-publication",
    "mercadopago-webhook"
  ],
  "environments": {
    "development": {
      "needTunnel": true,
      "tunnelProvider": "testsprite",
      "mockServices": true,
      "browser": {
        "devtools": true,
        "slowMo": 500,
        "headless": false
      },
      "debugging": {
        "pauseOnFailure": true,
        "stepByStep": true,
        "verboseLogging": true
      }
    },
    "staging": {
      "needTunnel": false,
      "mockServices": false,
      "mercadoPago": {
        "useSandbox": true
      },
      "browser": {
        "devtools": false,
        "slowMo": 100,
        "headless": true
      }
    },
    "production": {
      "needTunnel": false,
      "mockServices": false,
      "testScope": "smoke",
      "mercadoPago": {
        "useSandbox": false,
        "testAmount": 1
      },
      "browser": {
        "devtools": false,
        "slowMo": 0,
        "headless": true
      }
    }
  },
  "debugging": {
    "breakpoints": {
      "enabled": true,
      "onError": true,
      "onAssertion": false
    },
    "console": {
      "capture": true,
      "logLevel": "debug"
    },
    "network": {
      "capture": true,
      "failedRequestsOnly": false
    },
    "performance": {
      "trace": true,
      "metrics": true
    }
  },
  "reporting": {
    "formats": ["html", "json", "junit"],
    "outputDir": "test-results",
    "includeScreenshots": true,
    "includeVideos": true,
    "includeTraces": true
  }
}
