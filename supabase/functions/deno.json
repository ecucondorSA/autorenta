{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "allowUnreachableCode": false
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": [
        "no-explicit-any",
        "guard-for-in",
        "no-eval",
        "no-sparse-arrays",
        "no-external-import"
      ]
    }
  },
  "fmt": {
    "options": {
      "singleQuote": true,
      "lineWidth": 120
    }
  }
}
