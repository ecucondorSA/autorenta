<div class="min-h-screen bg-surface-base dark:bg-surface-base transition-colors duration-300">
  <!-- Header con Breadcrumbs -->
  <div
    class="bg-surface-raised dark:bg-surface-raised dark:bg-surface-raised border-b border-border-default dark:border-neutral-800/60 transition-colors duration-300"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <nav
        class="flex items-center space-x-2 text-sm text-text-secondary dark:text-text-secondary/70"
      >
        <a
          href="/cars"
          class="hover:text-text-primary dark:text-text-secondary/80 dark:hover:text-ivory-luminous"
          >Vehículos</a
        >
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path
            fill-rule="evenodd"
            d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
            clip-rule="evenodd"
          />
        </svg>
        <span class="text-text-primary dark:text-text-primary font-medium">Detalle & Pago</span>
        <span
          class="ml-auto text-xs bg-primary-100 text-primary-700 dark:bg-cta-default/20 dark:text-cta-default/80 px-2 py-1 rounded transition-colors"
          >3/3</span
        >
      </nav>
      <div class="flex items-center gap-3">
        <div class="flex items-center gap-2">
          <div
            class="w-8 h-8 bg-success-light/20 dark:bg-success-light/30 rounded-full flex items-center justify-center"
          >
            <svg
              class="w-4 h-4 text-success-light dark:text-success-light"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
              />
            </svg>
          </div>
          <h1 class="text-2xl font-bold text-text-primary dark:text-text-primary">¡Último paso!</h1>
        </div>
        <span class="text-sm text-success-light dark:text-success-light font-medium">
          Reserva casi lista
        </span>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- ✅ NUEVO: Mensaje de Fallback a Wallet -->
    @if (showFallbackMessage()) {
      <div
        class="mb-6 bg-warning-bg border-l-4 border-warning-border dark:bg-warning-900/20 dark:border-warning-border/70 rounded-lg p-4 animate-slide-down transition-all duration-300"
        role="alert"
      >
        <div class="flex items-start space-x-3">
          <svg
            class="w-6 h-6 text-warning-text dark:text-warning-400 flex-shrink-0"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              fill-rule="evenodd"
              d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z"
              clip-rule="evenodd"
            />
          </svg>
          <div class="flex-1">
            <p class="text-sm font-semibold text-warning-strong dark:text-warning-100">
              Pago con tarjeta no disponible
            </p>
            <p class="mt-1 text-sm text-warning-strong dark:text-warning-200">
              {{ fallbackReason() }}. Puedes usar tu Wallet de AutoRenta para completar la reserva
              de forma segura.
            </p>
            <div class="mt-3 flex flex-wrap gap-2">
              <button
                type="button"
                (click)="showFallbackMessage.set(false); paymentMode.set('card')"
                class="text-xs font-medium text-warning-strong dark:text-warning-300 hover:text-warning-strong dark:hover:text-warning-100 underline"
              >
                Intentar con otra tarjeta
              </button>
              <button
                type="button"
                (click)="showFallbackMessage.set(false)"
                class="text-xs font-medium text-warning-text dark:text-warning-400 hover:text-warning-strong dark:hover:text-warning-300"
              >
                Continuar con Wallet ✓
              </button>
            </div>
          </div>
          <button
            type="button"
            (click)="showFallbackMessage.set(false)"
            class="text-warning-500 hover:text-warning-strong dark:text-warning-400 dark:hover:text-warning-200"
            aria-label="Cerrar mensaje"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path
                fill-rule="evenodd"
                d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                clip-rule="evenodd"
              />
            </svg>
          </button>
        </div>
      </div>
    }

    <!-- Global Loading -->
    @if (loadingFx() || loadingRisk() || loadingPricing()) {
      <div class="flex flex-col items-center justify-center py-16">
        <svg
          class="animate-spin h-12 w-12 text-primary-600 dark:text-cta-default"
          fill="none"
          viewBox="0 0 24 24"
        >
          <circle
            class="opacity-25"
            cx="12"
            cy="12"
            r="10"
            stroke="currentColor"
            stroke-width="4"
          ></circle>
          <path
            class="opacity-75"
            fill="currentColor"
            d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
          ></path>
        </svg>
        <p class="mt-4 text-sm text-text-secondary dark:text-text-secondary/70">
          Calculando tu reserva...
        </p>
      </div>
    }

    <!-- Global Error -->
    @if (error(); as errorMsg) {
      <div
        class="mb-6 bg-error-bg border border-error-border dark:bg-error-900/30 dark:border-error-700/60 rounded-lg p-4 transition-colors duration-300"
      >
        <div class="flex items-start space-x-3">
          <svg
            class="w-6 h-6 text-error-text flex-shrink-0"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              fill-rule="evenodd"
              d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
              clip-rule="evenodd"
            />
          </svg>
          <div class="flex-1">
            <p class="text-sm font-medium text-error-strong">Error</p>
            <p class="mt-1 text-sm text-error-strong">{{ errorMsg }}</p>
            <button
              type="button"
              (click)="retryInitialization()"
              class="mt-3 inline-flex items-center px-3 py-1.5 border border-error-300 text-sm font-medium rounded-md text-error-strong bg-surface-raised dark:bg-surface-secondary hover:bg-error-bg dark:bg-error-900/50 dark:border-error-700 dark:text-error-200 dark:hover:bg-error-900/70 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors"
            >
              <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
                />
              </svg>
              Reintentar
            </button>
          </div>
        </div>
      </div>
    }

    <!-- Main Grid Layout -->
    @if (
      bookingInput() && fxSnapshot() && riskSnapshot() && priceBreakdown() && bookingDates();
      as dates
    ) {
      @if (showCardForm()) {
        <div
          class="mb-6 rounded-2xl border border-primary-100 dark:border-cta-default/40 bg-surface-raised dark:bg-surface-secondary/80 p-6 shadow-soft"
        >
          <div class="flex flex-wrap items-start justify-between gap-4">
            <div>
              <p
                class="text-xs uppercase tracking-wide text-primary-700 dark:text-cta-default/80"
              >
                Pago con tarjeta en sitio
              </p>
              <h3 class="mt-1 text-xl font-semibold text-text-primary dark:text-text-primary">
                Completa los datos de tu tarjeta
              </h3>
              <p class="mt-1 text-sm text-text-secondary dark:text-text-secondary/80">
                Permaneces en AutoRenta. Tus datos están protegidos por Mercado Pago.
              </p>
            </div>
            <div class="text-right">
              <p class="text-xs uppercase text-text-secondary dark:text-text-secondary/70">
                Total a pagar
              </p>
              <p class="text-2xl font-bold text-text-primary dark:text-text-primary">
                $ {{ priceBreakdown()?.totalArs | number: '1.0-0' }}
              </p>
              <p class="text-xs text-text-secondary dark:text-text-secondary/70">
                ≈ {{ priceBreakdown()?.totalUsd | currency: 'USD' : 'symbol' : '1.0-2' }}
              </p>
            </div>
          </div>
          <div class="relative mt-6">
            <app-mercadopago-card-form
              [amountArs]="priceBreakdown()?.totalArs || booking()?.total_amount || 0"
              (cardTokenGenerated)="onCardTokenGenerated($event)"
              (cardError)="onCardError($event)"
            ></app-mercadopago-card-form>

            @if (isProcessingTokenPayment()) {
              <div
                class="absolute inset-0 flex flex-col items-center justify-center rounded-xl bg-surface-base/80 dark:bg-neutral-900/80 backdrop-blur"
              >
                <svg class="animate-spin h-10 w-10 text-primary-600 dark:text-cta-default" viewBox="0 0 24 24" fill="none">
                  <circle
                    class="opacity-25"
                    cx="12"
                    cy="12"
                    r="10"
                    stroke="currentColor"
                    stroke-width="4"
                  ></circle>
                  <path
                    class="opacity-75"
                    fill="currentColor"
                    d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                  ></path>
                </svg>
                <p class="mt-3 text-sm font-medium text-text-primary dark:text-text-primary">
                  Procesando tu pago...
                </p>
              </div>
            }
          </div>
        </div>
      }

      <section class="mb-6">
        <div
          class="rounded-2xl border border-border-default dark:border-border-default/60 dark:border-neutral-800/60 bg-surface-raised dark:bg-surface-raised dark:bg-surface-raised p-6 shadow-soft grid gap-6 sm:grid-cols-2 lg:grid-cols-4"
        >
          <div>
            <p
              class="text-xs uppercase tracking-wide text-text-secondary dark:text-text-secondary/70 dark:text-text-secondary/60"
            >
              Vehículo
            </p>
            <p class="mt-1 text-lg font-semibold text-text-primary dark:text-text-primary truncate">
              {{ car()?.model || 'Vehículo confirmado' }}
            </p>
            <p class="text-sm text-text-secondary dark:text-text-secondary/70">
              {{ car()?.location_city || 'Argentina' }}
            </p>
          </div>
          <div>
            <p
              class="text-xs uppercase tracking-wide text-text-secondary dark:text-text-secondary/70 dark:text-text-secondary/60"
            >
              Fechas
            </p>
            <p class="mt-1 font-semibold text-text-primary dark:text-text-primary">
              {{ dates.startDate | date: 'dd/MM HH:mm' }} →
              {{ dates.endDate | date: 'dd/MM HH:mm' }}
            </p>
            <p class="text-sm text-text-secondary dark:text-text-secondary/70">
              {{ dates.totalDays }} {{ dates.totalDays === 1 ? 'día' : 'días' }}
            </p>
          </div>
          <div>
            <p
              class="text-xs uppercase tracking-wide text-text-secondary dark:text-text-secondary/70 dark:text-text-secondary/60"
            >
              Método de pago
            </p>
            <p class="mt-1 font-semibold text-text-primary dark:text-text-primary">
              {{ paymentMode() === 'card' ? 'Tarjeta' : 'Wallet' }}
            </p>
            <p class="text-sm text-text-secondary dark:text-text-secondary/70">
              @if (paymentMode() === 'card') {
                Preautorización
              } @else {
                Crédito bloqueado
              }
            </p>
          </div>
          <div>
            <p
              class="text-xs uppercase tracking-wide text-text-secondary dark:text-text-secondary/70 dark:text-text-secondary/60"
            >
              Total a pagar
            </p>
            <p class="mt-1 text-lg font-semibold text-text-primary dark:text-text-primary">
              $ {{ priceBreakdown()?.totalArs | number: '1.0-0' }}
            </p>
            <p class="text-sm text-text-secondary dark:text-text-secondary/70">
              ≈ {{ priceBreakdown()?.totalUsd | currency: 'USD' : 'symbol' : '1.0-0' }}
            </p>
          </div>
        </div>
      </section>
      <div class="flex flex-col gap-6 lg:flex-row lg:items-start">
        <!-- LEFT COLUMN (8-9 cols) -->
        <div class="space-y-6 w-full lg:flex-[0_0_65%]">
          <!-- ✅ NUEVO: Payment Summary Panel -->
          <app-payment-summary-panel
            [priceBreakdown]="priceBreakdown()!"
            [riskSnapshot]="riskSnapshot()!"
            [fxSnapshot]="fxSnapshot()!"
            [paymentMode]="paymentMode()"
            (compareMethodsClick)="onCompareMethodsClick()"
          />

          <!-- Payment Mode Toggle - Separación clara entre métodos -->
          <section
            class="rounded-2xl border-2 border-border-default dark:border-border-default/60 bg-surface-raised dark:bg-surface-raised p-6 shadow-soft"
            [class.border-cta-default/40]="paymentMode() === 'card'"
            [class.border-success-light/40]="paymentMode() === 'wallet'"
          >
            <div class="mb-6">
              <h2 class="text-xl font-semibold text-text-primary dark:text-text-primary">
                Método de pago
              </h2>
              <p class="text-sm text-text-secondary dark:text-text-secondary/70 mt-1">
                Elegí cómo querés pagar y garantizar tu reserva
              </p>
            </div>

            <div class="mt-4">
              <app-payment-mode-toggle
                [selectedMode]="paymentMode()"
                (modeChange)="onPaymentModeChange($event)"
              />
            </div>

            <!-- Alerta contextual según método seleccionado -->
            <div class="mt-4">
              <app-payment-mode-alert
                [paymentMode]="paymentMode()"
                [riskSnapshot]="riskSnapshot()!"
                [fxSnapshot]="fxSnapshot()!"
              />
            </div>
          </section>

          <!-- Cobertura opcional -->
          <section
            class="rounded-2xl border border-border-default dark:border-border-default/60 bg-surface-raised dark:bg-surface-raised p-6 shadow-soft"
          >
            <div class="mb-4">
              <h3 class="text-lg font-semibold text-text-primary dark:text-text-primary">
                Cobertura adicional (opcional)
              </h3>
              <p class="text-sm text-text-secondary dark:text-text-secondary/70 mt-1">
                Reducí tu responsabilidad en caso de daños
              </p>
            </div>

            <div class="mt-4">
              <app-coverage-upgrade-selector
                [selectedUpgrade]="coverageUpgrade()"
                (upgradeChange)="onCoverageUpgradeChange($event)"
              />
            </div>

            @if (coverageUpgrade() !== 'standard') {
              <div class="mt-4 p-3 bg-surface-base dark:bg-surface-secondary/40 rounded-lg">
                <div class="flex items-center justify-between">
                  <span class="text-sm text-text-secondary dark:text-text-secondary/80">
                    Costo adicional
                  </span>
                  <span class="font-semibold text-primary-600 dark:text-cta-default">
                    +{{ getCoverageUpgradeCost() | currency: 'ARS' : 'symbol' : '1.0-0' }}
                  </span>
                </div>
              </div>
            }
          </section>

          <!-- Garantía según método seleccionado - Separación visual clara -->
          @if (paymentMode() === 'card') {
            <!-- TARJETA DE CRÉDITO -->
            <section
              class="rounded-2xl border-2 border-cta-default/40 dark:border-cta-default/60 bg-gradient-to-br from-cta-default/5 to-cta-default/10 dark:from-cta-default/10 dark:to-cta-default/5 p-6 shadow-soft"
            >
              <div class="flex items-center gap-3 mb-4">
                <div class="w-10 h-10 bg-cta-default/20 dark:bg-cta-default/30 rounded-full flex items-center justify-center">
                  <svg class="w-6 h-6 text-cta-default" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-text-primary dark:text-text-primary">
                    Pago con Tarjeta
                  </h3>
                  <p class="text-sm text-text-secondary dark:text-text-secondary/70">
                    Preautorización de garantía
                  </p>
                </div>
              </div>
              <div class="mt-4">
                <app-card-hold-panel
                  *ngIf="riskSnapshot() && fxSnapshot()"
                  [riskSnapshot]="riskSnapshot()!"
                  [fxSnapshot]="fxSnapshot()!"
                  [userId]="userId() || ''"
                  [currentAuthorization]="paymentAuthorization()"
                  (authorizationChange)="onAuthorizationChange($event)"
                  (fallbackToWallet)="onFallbackToWallet()"
                />
              </div>
            </section>
          } @else {
            <!-- WALLET -->
            <section
              class="rounded-2xl border-2 border-success-light/40 dark:border-success-light/60 bg-gradient-to-br from-success-light/5 to-success-light/10 dark:from-success-light/10 dark:to-success-light/5 p-6 shadow-soft"
            >
              <div class="flex items-center gap-3 mb-4">
                <div class="w-10 h-10 bg-success-light/20 dark:bg-success-light/30 rounded-full flex items-center justify-center">
                  <svg class="w-6 h-6 text-success-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-text-primary dark:text-text-primary">
                    Pago con Wallet
                  </h3>
                  <p class="text-sm text-text-secondary dark:text-text-secondary/70">
                    Bloqueo de crédito de seguridad
                  </p>
                </div>
              </div>
              <div class="mt-4">
                <app-credit-security-panel
                  *ngIf="riskSnapshot() && fxSnapshot()"
                  [riskSnapshot]="riskSnapshot()!"
                  [fxSnapshot]="fxSnapshot()!"
                  [userId]="userId() || ''"
                  [bookingId]="bookingInput()?.carId"
                  [currentLockInput]="walletLock()"
                  (lockChange)="onWalletLockChange($event)"
                />
              </div>
            </section>
          }

          <!-- Validation Errors -->
          @if (validationErrors().length > 0) {
            <div
              class="bg-warning-bg border border-warning-border dark:bg-warning-900/30 dark:border-warning-700/60 rounded-lg p-4 transition-colors duration-300"
            >
              <div class="flex items-start space-x-3">
                <svg
                  class="w-5 h-5 text-warning-text dark:text-warning-200 flex-shrink-0 mt-0.5"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z"
                    clip-rule="evenodd"
                  />
                </svg>
                <div class="flex-1">
                  <p class="text-sm font-medium text-warning-strong dark:text-warning-50">
                    Completa los requisitos:
                  </p>
                  <ul
                    class="mt-2 text-sm text-warning-strong dark:text-warning-200 list-disc list-inside space-y-1"
                  >
                    @for (error of validationErrors(); track error.code) {
                      <li>{{ error.message }}</li>
                    }
                  </ul>
                </div>
              </div>
            </div>
          }
        </div>

        <!-- RIGHT COLUMN (3-4 cols) - Sticky Summary -->
        <div class="w-full lg:flex-[0_0_35%] lg:sticky lg:top-6">
          <app-booking-summary-card
            [carName]="car()?.model || 'Vehículo'"
            [carImage]="car()?.photos?.[0]?.url || car()?.car_photos?.[0]?.url || ''"
            [carLocation]="car()?.location_city || 'Argentina'"
            [dates]="dates"
            [priceBreakdown]="priceBreakdown()"
            [fxSnapshot]="fxSnapshot()"
            [riskSnapshot]="riskSnapshot()"
            [paymentMode]="paymentMode()"
          >
            <!-- ✅ NUEVO: CTA Button con estados mejorados (via ng-content) -->
            <button
              type="button"
              (click)="onConfirm()"
              [disabled]="!canProceed() || loading() || processingFinalPayment()"
              class="w-full flex justify-center items-center px-6 py-4 border border-transparent text-lg font-semibold rounded-lg text-text-inverse bg-gradient-to-r from-success-light to-cta-default hover:from-success-light hover:to-cta-default dark:from-success-light dark:to-cta-default dark:hover:from-success-light dark:hover:to-cta-default focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-success-light dark:focus:ring-success-light dark:focus:ring-offset-neutral-900 disabled:opacity-50 disabled:cursor-not-allowed transition-all shadow-lg hover:shadow-xl dark:shadow-neutral-950/40"
            >
              <!-- Estado 1: Creando reserva -->
              @if (loading() && !processingFinalPayment()) {
                <svg
                  class="animate-spin -ml-1 mr-3 h-6 w-6 text-text-inverse dark:text-text-primary"
                  fill="none"
                  viewBox="0 0 24 24"
                >
                  <circle
                    class="opacity-25"
                    cx="12"
                    cy="12"
                    r="10"
                    stroke="currentColor"
                    stroke-width="4"
                  ></circle>
                  <path
                    class="opacity-75"
                    fill="currentColor"
                    d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                  ></path>
                </svg>
                <span>Reservando tu auto...</span>
              }
              <!-- Estado 2: Procesando pago -->
              @else if (processingFinalPayment()) {
                <svg
                  class="animate-spin -ml-1 mr-3 h-6 w-6 text-text-inverse dark:text-text-primary"
                  fill="none"
                  viewBox="0 0 24 24"
                >
                  <circle
                    class="opacity-25"
                    cx="12"
                    cy="12"
                    r="10"
                    stroke="currentColor"
                    stroke-width="4"
                  ></circle>
                  <path
                    class="opacity-75"
                    fill="currentColor"
                    d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                  ></path>
                </svg>
                <span>Procesando pago seguro...</span>
              }
              <!-- Estado 3: Normal (listo para confirmar) -->
              @else {
                <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                  />
                </svg>
                <span>¡Confirmar mi reserva!</span>
              }
            </button>

            <!-- Mensaje de confianza -->
            <div
              class="mt-3 p-3 bg-success-light/10 dark:bg-success-light/20 border border-success-light/40 dark:border-success-light/60 rounded-lg"
            >
              <div class="flex items-center justify-center gap-2">
                <svg
                  class="w-4 h-4 text-success-light"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                  />
                </svg>
                <p class="text-xs text-center text-success-light dark:text-success-light">
                  <strong>Pago 100% seguro</strong> • Tu dinero está protegido por MercadoPago
                </p>
              </div>
            </div>

            <!-- Subtexto FX -->
            <p class="mt-3 text-xs text-center text-text-secondary dark:text-text-secondary/70">
              Tipo de cambio válido hasta {{ fxSnapshot()!.expiresAt | date: 'dd/MM/yyyy HH:mm' }}
            </p>
          </app-booking-summary-card>

          <!-- ✅ NEW: Dynamic Price Lock Panel -->
          @if (priceLock()) {
            <div class="mt-6">
              <app-dynamic-price-lock-panel
                [priceLock]="priceLock()"
                [comparison]="priceComparison()"
                [surgeInfo]="surgeInfo()"
                (refresh)="onRefreshPriceLock()"
                (viewBreakdown)="onViewPriceBreakdown()"
              />
            </div>
          }
        </div>
      </div>

      <!-- Sticky CTA móvil -->
      <div
        class="lg:hidden fixed bottom-0 inset-x-0 bg-surface-raised dark:bg-surface-secondary/95 dark:bg-surface-raised/95 border-t border-border-default dark:border-border-default/70 dark:border-neutral-800/70 backdrop-blur z-30 px-4 py-3"
      >
        <div class="flex items-center justify-between gap-4">
          <div>
            <p
              class="text-xs uppercase tracking-wide text-text-secondary dark:text-text-secondary/70 dark:text-text-secondary/60"
            >
              Total
            </p>
            <p class="text-lg font-semibold text-text-primary dark:text-text-primary">
              $ {{ priceBreakdown()?.totalArs | number: '1.0-0' }}
            </p>
            <p class="text-xs text-text-secondary dark:text-text-secondary/70">
              ≈ {{ priceBreakdown()?.totalUsd | currency: 'USD' : 'symbol' : '1.0-2' }}
            </p>
          </div>
          <button
            type="button"
            (click)="onConfirm()"
            [disabled]="!canProceed() || loading() || processingFinalPayment()"
            class="flex-1 inline-flex justify-center items-center px-4 py-3 rounded-xl text-sm font-semibold text-cta-text bg-primary-600 hover:bg-primary-700 dark:bg-cta-default dark:hover:bg-cta-default/80 disabled:opacity-50 disabled:cursor-not-allowed transition-all shadow-md"
          >
            @if (processingFinalPayment()) {
              <svg
                class="animate-spin -ml-1 mr-2 h-5 w-5 text-text-inverse"
                viewBox="0 0 24 24"
                fill="none"
              >
                <circle
                  class="opacity-25"
                  cx="12"
                  cy="12"
                  r="10"
                  stroke="currentColor"
                  stroke-width="4"
                ></circle>
                <path
                  class="opacity-75"
                  fill="currentColor"
                  d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"
                ></path>
              </svg>
              Procesando...
            } @else {
              Confirmar y pagar
            }
          </button>
        </div>
      </div>
    }

    <!-- ============================================
         VISTA OPTIMIZADA PARA CONVERSIÓN
         ============================================ -->
    @if (showOptimizedView()) {
      <div class="mt-8 space-y-6">
      </div>
    }
  </div>

  <!-- ✅ NUEVO: Modal de Comparación de Métodos -->
  @if (showComparisonModal() && fxSnapshot() && riskSnapshot() && priceBreakdown()) {
    <app-payment-method-comparison-modal
      [priceBreakdown]="priceBreakdown()!"
      [riskSnapshot]="riskSnapshot()!"
      [fxSnapshot]="fxSnapshot()!"
      (close)="onCloseComparisonModal()"
    />
  }

  <!-- ✅ NUEVO: Modal para solicitar fecha de nacimiento -->
  @if (showBirthDateModal()) {
    <app-birth-date-modal
      (completed)="onBirthDateCompleted($event)"
      (cancelled)="onBirthDateCancelled()"
    />
  }

  <!-- ✅ NEW: Dynamic Price Breakdown Modal -->
  <app-dynamic-price-breakdown-modal
    [isOpen]="showBreakdownModal()"
    [snapshot]="priceLock()?.priceSnapshot ?? null"
    (closed)="showBreakdownModal.set(false)"
  />
</div>
