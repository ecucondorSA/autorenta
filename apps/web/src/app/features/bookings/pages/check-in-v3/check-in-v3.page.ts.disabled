})
export class CheckInV3Page implements OnInit {
  bookingId = signal<string>('');
  booking = signal<BookingDetails | null>(null);
  isLoading = signal(true);
  isSaving = signal(false);
  inspectionData = signal<InspectionData | null>(null);
  isInspectionComplete = signal(false);

  constructor(
    private route: ActivatedRoute,
    private router: Router,
    private bookingsService: BookingsService,
    private carsService: CarsService,
    private notifications: NotificationManager
  ) {}

  ngOnInit() {
    const id = this.route.snapshot.paramMap.get('id');
    if (id) {
      this.bookingId.set(id);
      this.loadBooking();
      this.loadDraft();
    }
  }

  async loadBooking() {
    this.isLoading.set(true);
    try {
      const booking = await this.bookingsService.getBookingById(this.bookingId());
      if (booking) {
        const car = await this.carsService.getCarById(booking.car_id);
        this.booking.set({
          id: booking.id,
          carId: booking.car_id,
          carName: car?.brand + ' ' + car?.model || 'Vehículo',
          carImage: car?.main_image_url || '/assets/placeholder-car.jpg',
          locadorName: 'Propietario',
          startDate: new Date(booking.start_date),
          endDate: new Date(booking.end_date),
          pickupLocation: booking.pickup_location || 'Por confirmar',
          status: booking.status
        });
      }
    } catch (error) {
      console.error('Error loading booking:', error);
      this.notifications.show('Error al cargar la reserva');
    } finally {
      this.isLoading.set(false);
    }
  }

  loadDraft() {
    const draftKey = `check_in_draft_${this.bookingId()}`;
    const saved = localStorage.getItem(draftKey);
    if (saved) {
      try {
        const data = JSON.parse(saved);
        this.inspectionData.set(data);
      } catch (error) {
        console.error('Error loading draft:', error);
      }
    }
  }

  saveDraft() {
    const draftKey = `check_in_draft_${this.bookingId()}`;
    if (this.inspectionData()) {
      localStorage.setItem(draftKey, JSON.stringify(this.inspectionData()));
      this.notifications.show('Borrador guardado');
    }
  }

  onInspectionDataChange(data: InspectionData) {
    this.inspectionData.set(data);
  }

  onInspectionComplete(data: InspectionData) {
    this.inspectionData.set(data);
    this.isInspectionComplete.set(true);
  }

  async submitCheckIn() {
    if (!this.inspectionData() || !this.isInspectionComplete()) {
      this.notifications.show('Por favor completa la inspección');
      return;
    }

    this.isSaving.set(true);
    try {
      // TODO: Upload photos to storage
      // TODO: Save inspection data to database
      // TODO: Update booking status to 'active'

      // Simulate API call
      await new Promise(resolve => setTimeout(resolve, 2000));

      // Clear draft
      const draftKey = `check_in_draft_${this.bookingId()}`;
      localStorage.removeItem(draftKey);

      this.notifications.show('Check-in completado exitosamente');
      this.router.navigate(['/bookings', this.bookingId()]);
    } catch (error) {
      console.error('Error submitting check-in:', error);
      this.notifications.show('Error al guardar el check-in');
    } finally {
      this.isSaving.set(false);
    }
  }

  formatDate(date: Date): string {
    return new Intl.DateTimeFormat('es-AR', {
      weekday: 'short',
      day: 'numeric',
      month: 'short',
      year: 'numeric',
      hour: '2-digit',
      minute: '2-digit'
    }).format(date);
  }
}
