                <h2>{{ booking()!.carName }}</h2>
                <p class="locador-name">
                  <ion-icon name="person-outline"></ion-icon>
                  {{ booking()!.locadorName }}
                </p>
              </div>
            </div>

            <div class="booking-dates">
              <div class="date-item">
                <ion-icon name="calendar-outline" class="date-icon"></ion-icon>
                <div>
                  <p class="date-label">Inicio del viaje</p>
                  <p class="date-value">{{ formatDate(booking()!.startDate) }}</p>
                </div>
              </div>
              <div class="date-item">
                <ion-icon name="location-outline" class="date-icon"></ion-icon>
                <div>
                  <p class="date-label">Punto de retiro</p>
                  <p class="date-value">{{ booking()!.pickupLocation }}</p>
                </div>
              </div>
            </div>

            <!-- Important Notice -->
            <div class="notice-banner">
              <ion-icon name="information-circle-outline"></ion-icon>
              <div>
                <strong>Inspección Pre-Viaje</strong>
                <p>Documenta el estado del vehículo antes de iniciar tu viaje. Esto te protege de cargos por daños preexistentes.</p>
              </div>
            </div>
          </div>

          <!-- Vehicle Inspection Component -->
          <app-vehicle-inspection-v3
            mode="check-in"
            (dataChange)="onInspectionDataChange($event)"
            (complete)="onInspectionComplete($event)"
          ></app-vehicle-inspection-v3>

          <!-- Action Buttons -->
          <div class="action-buttons">
            <ion-button
              expand="block"
              size="large"
              [disabled]="!isInspectionComplete() || isSaving()"
              (click)="submitCheckIn()"
              class="submit-btn"
            >
              @if (isSaving()) {
                <ion-spinner name="crescent"></ion-spinner>
                <span>Guardando...</span>
              } @else {
                <ion-icon name="checkmark-circle-outline" slot="start"></ion-icon>
                <span>Confirmar Check-in</span>
              }
            </ion-button>

            <ion-button
              expand="block"
              fill="outline"
              (click)="saveDraft()"
              [disabled]="isSaving()"
            >
              <ion-icon name="save-outline" slot="start"></ion-icon>
              Guardar Borrador
            </ion-button>
          </div>
        } @else {
          <div class="error-state">
            <ion-icon name="alert-circle-outline"></ion-icon>
            <h3>No se pudo cargar la reserva</h3>
            <p>Por favor, intenta nuevamente o contacta soporte.</p>
            <ion-button (click)="loadBooking()">
              <ion-icon name="refresh-outline" slot="start"></ion-icon>
              Reintentar
            </ion-button>
          </div>
        }
      </div>
    </ion-content>
  `,
  styles: [`
