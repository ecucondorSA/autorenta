    }

    .date-item {
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .date-icon {
      font-size: 1.5rem;
      color: #3b82f6;
    }

    .date-label {
      font-size: 0.75rem;
      color: #6b7280;
      margin-bottom: 0.25rem;
    }

    .date-value {
      font-weight: 600;
      font-size: 0.875rem;
    }

    .notice-banner {
      display: flex;
      gap: 1rem;
