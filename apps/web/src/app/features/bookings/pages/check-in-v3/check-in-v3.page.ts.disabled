    <ion-content>
      <div class="check-in-container">
        @if (isLoading()) {
          <div class="loading-state">
            <ion-spinner name="crescent"></ion-spinner>
            <p>Cargando información de la reserva...</p>
          </div>
        } @else if (booking()) {
          <!-- Booking Info Card -->
          <div class="booking-info-card">
