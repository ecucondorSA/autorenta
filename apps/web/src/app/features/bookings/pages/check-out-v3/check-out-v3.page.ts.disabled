                <span>Viaje Completado</span>
              </div>
            </div>

            <div class="booking-dates">
              <div class="date-item">
                <ion-icon name="calendar-outline" class="date-icon"></ion-icon>
                <div>
                  <p class="date-label">Fin del viaje</p>
                  <p class="date-value">{{ formatDate(booking()!.endDate) }}</p>
                </div>
              </div>
              <div class="date-item">
                <ion-icon name="location-outline" class="date-icon"></ion-icon>
                <div>
                  <p class="date-label">Punto de entrega</p>
                  <p class="date-value">{{ booking()!.dropoffLocation }}</p>
                </div>
              </div>
            </div>

            <!-- Important Notice -->
            <div class="notice-banner">
              <ion-icon name="information-circle-outline"></ion-icon>
              <div>
                <strong>Inspección Post-Viaje</strong>
                <p>Documenta el estado final del vehículo. Se comparará con las fotos del check-in para determinar si hay daños nuevos.</p>
              </div>
            </div>
          </div>

          @if (showComparison()) {
            <!-- Photo Comparison View -->
            <div class="comparison-section">
              <h3>
                <ion-icon name="git-compare-outline"></ion-icon>
                Comparación de Fotos
              </h3>

              <div class="comparison-grid">
                @for (comparison of photoComparisons(); track comparison.angle) {
                  <div class="comparison-card" [class.has-damage]="comparison.hasNewDamage">
                    <h4>{{ comparison.label }}</h4>
                    <div class="photo-pair">
                      <div class="photo-column">
                        <p class="photo-label">Check-in</p>
                        @if (comparison.before) {
                          <img [src]="comparison.before" alt="Antes" class="comparison-photo" />
                        } @else {
                          <div class="no-photo">Sin foto</div>
                        }
                      </div>
                      <div class="photo-column">
                        <p class="photo-label">Check-out</p>
                        @if (comparison.after) {
                          <img [src]="comparison.after" alt="Después" class="comparison-photo" />
                        } @else {
                          <div class="no-photo">Pendiente</div>
                        }
                      </div>
                    </div>
                    @if (comparison.hasNewDamage) {
                      <div class="damage-alert">
                        <ion-icon name="alert-circle"></ion-icon>
                        <span>Posible daño nuevo detectado</span>
                      </div>
                    }
                  </div>
                }
              </div>

              @if (newDamagesCount() > 0) {
                <div class="damages-summary">
                  <ion-icon name="warning"></ion-icon>
                  <div>
                    <strong>{{ newDamagesCount() }} posible(s) daño(s) nuevo(s)</strong>
                    <p>El locador revisará y determinará si corresponde un cargo adicional.</p>
                  </div>
                </div>
              }
            </div>
          } @else {
            <!-- Vehicle Inspection Component -->
            <app-vehicle-inspection-v3
              mode="check-out"
              [existingData]="booking()!.checkInData"
              (dataChange)="onInspectionDataChange($event)"
              (complete)="onInspectionComplete($event)"
            ></app-vehicle-inspection-v3>
          }

          <!-- Action Buttons -->
          <div class="action-buttons">
            @if (showComparison()) {
              <ion-button
                expand="block"
                fill="outline"
                (click)="toggleComparisonMode()"
              >
                <ion-icon name="camera-outline" slot="start"></ion-icon>
                Volver a Inspección
              </ion-button>
            }

            <ion-button
              expand="block"
              size="large"
              [disabled]="!isInspectionComplete() || isSaving()"
              (click)="submitCheckOut()"
              class="submit-btn"
            >
              @if (isSaving()) {
                <ion-spinner name="crescent"></ion-spinner>
                <span>Finalizando...</span>
              } @else {
                <ion-icon name="checkmark-done-outline" slot="start"></ion-icon>
                <span>Finalizar Check-out</span>
              }
            </ion-button>

            <ion-button
              expand="block"
              fill="outline"
              (click)="saveDraft()"
              [disabled]="isSaving()"
            >
              <ion-icon name="save-outline" slot="start"></ion-icon>
              Guardar Borrador
            </ion-button>
          </div>
        } @else {
          <div class="error-state">
            <ion-icon name="alert-circle-outline"></ion-icon>
            <h3>No se pudo cargar la reserva</h3>
            <p>Por favor, intenta nuevamente o contacta soporte.</p>
            <ion-button (click)="loadBooking()">
              <ion-icon name="refresh-outline" slot="start"></ion-icon>
              Reintentar
            </ion-button>
          </div>
        }
      </div>
    </ion-content>
  `,
