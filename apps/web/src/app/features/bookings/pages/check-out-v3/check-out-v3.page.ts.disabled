import { Component, OnInit, signal, computed } from '@angular/core';
import { CommonModule } from '@angular/common';
import { IonicModule } from '@ionic/angular';
import { Router, ActivatedRoute } from '@angular/router';
import { VehicleInspectionV3Component, InspectionData, InspectionPhoto } from '../../components/vehicle-inspection-v3/vehicle-inspection-v3.component';
import { BookingsService } from '../../../../core/services/bookings.service';
import { CarsService } from '../../../../core/services/cars.service';
import { NotificationManager } from '../../../../core/services/notification-manager.service';

interface BookingDetails {
  id: string;
  carId: string;
  carName: string;
  carImage: string;
  locadorName: string;
  startDate: Date;
  endDate: Date;
  dropoffLocation: string;
  status: string;
  checkInData?: InspectionData;
}

interface PhotoComparison {
  angle: string;
  label: string;
  before: string | null;
  after: string | null;
  hasNewDamage: boolean;
}

@Component({
  selector: 'app-check-out-v3',
  standalone: true,
  imports: [CommonModule, IonicModule, VehicleInspectionV3Component],
  template: `
    <ion-header>
      <ion-toolbar>
        <ion-buttons slot="start">
          <ion-back-button defaultHref="/bookings"></ion-back-button>
        </ion-buttons>
        <ion-title>Check-out Digital</ion-title>
        <ion-buttons slot="end">
          <ion-button (click)="toggleComparisonMode()">
            <ion-icon [name]="showComparison() ? 'camera-outline' : 'git-compare-outline'"></ion-icon>
          </ion-button>
        </ion-buttons>
      </ion-toolbar>
    </ion-header>

    <ion-content>
      <div class="check-out-container">
        @if (isLoading()) {
          <div class="loading-state">
            <ion-spinner name="crescent"></ion-spinner>
            <p>Cargando información de la reserva...</p>
          </div>
