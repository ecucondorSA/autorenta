export class CheckOutV3Page implements OnInit {
  bookingId = signal<string>('');
  booking = signal<BookingDetails | null>(null);
  isLoading = signal(true);
  isSaving = signal(false);
  inspectionData = signal<InspectionData | null>(null);
  isInspectionComplete = signal(false);
  showComparison = signal(false);

  photoComparisons = computed(() => {
    const booking = this.booking();
    const currentData = this.inspectionData();

    if (!booking?.checkInData || !currentData) {
      return [];
    }

    const comparisons: PhotoComparison[] = [];

    booking.checkInData.photos.forEach(beforePhoto => {
      const afterPhoto = currentData.photos.find(p => p.angle === beforePhoto.angle);

      comparisons.push({
        angle: beforePhoto.angle,
        label: beforePhoto.label,
        before: beforePhoto.photo,
        after: afterPhoto?.photo || null,
        hasNewDamage: this.detectNewDamage(beforePhoto, afterPhoto)
      });
    });

    return comparisons;
  });

  newDamagesCount = computed(() => {
    return this.photoComparisons().filter(c => c.hasNewDamage).length;
  });

  constructor(
    private route: ActivatedRoute,
    private router: Router,
    private bookingsService: BookingsService,
    private carsService: CarsService,
    private notifications: NotificationManager
  ) {}

  ngOnInit() {
    const id = this.route.snapshot.paramMap.get('id');
    if (id) {
      this.bookingId.set(id);
      this.loadBooking();
      this.loadDraft();
    }
  }

  async loadBooking() {
    this.isLoading.set(true);
    try {
      const booking = await this.bookingsService.getBookingById(this.bookingId());
      if (booking) {
        const car = await this.carsService.getCarById(booking.car_id);

        // Load check-in data
        const checkInData = await this.loadCheckInData();

        this.booking.set({
          id: booking.id,
          carId: booking.car_id,
          carName: car?.brand + ' ' + car?.model || 'Vehículo',
          carImage: car?.main_image_url || '/assets/placeholder-car.jpg',
          locadorName: 'Propietario',
          startDate: new Date(booking.start_date),
          endDate: new Date(booking.end_date),
          dropoffLocation: booking.dropoff_location || booking.pickup_location || 'Por confirmar',
          status: booking.status,
          checkInData
        });
      }
    } catch (error) {
      console.error('Error loading booking:', error);
      this.notifications.show('Error al cargar la reserva');
    } finally {
      this.isLoading.set(false);
    }
  }

  async loadCheckInData(): Promise<InspectionData | undefined> {
    // TODO: Load from database
    // For now, load from localStorage as fallback
    const checkInKey = `check_in_data_${this.bookingId()}`;
    const saved = localStorage.getItem(checkInKey);
    if (saved) {
      try {
        return JSON.parse(saved);
      } catch (error) {
        console.error('Error loading check-in data:', error);
      }
    }
    return undefined;
  }

  loadDraft() {
    const draftKey = `check_out_draft_${this.bookingId()}`;
    const saved = localStorage.getItem(draftKey);
    if (saved) {
      try {
        const data = JSON.parse(saved);
        this.inspectionData.set(data);
      } catch (error) {
        console.error('Error loading draft:', error);
      }
    }
  }

  saveDraft() {
    const draftKey = `check_out_draft_${this.bookingId()}`;
    if (this.inspectionData()) {
      localStorage.setItem(draftKey, JSON.stringify(this.inspectionData()));
      this.notifications.show('Borrador guardado');
    }
  }

  onInspectionDataChange(data: InspectionData) {
    this.inspectionData.set(data);
  }

  onInspectionComplete(data: InspectionData) {
    this.inspectionData.set(data);
    this.isInspectionComplete.set(true);
  }

  toggleComparisonMode() {
    this.showComparison.update(v => !v);
  }

  detectNewDamage(before: InspectionPhoto, after: InspectionPhoto | undefined): boolean {
    // TODO: Implement AI-based damage detection
    // For now, simple heuristic: if there's an after photo but visual difference
    // This would ideally use computer vision to compare images
    return false;
  }

  async submitCheckOut() {
    if (!this.inspectionData() || !this.isInspectionComplete()) {
      this.notifications.show('Por favor completa la inspección');
      return;
    }

    this.isSaving.set(true);
    try {
      // TODO: Upload photos to storage
      // TODO: Save inspection data to database
      // TODO: Compare with check-in data
      // TODO: Generate damage report if needed
      // TODO: Update booking status to 'completed'
      // TODO: Trigger payment release to locador

      // Simulate API call
      await new Promise(resolve => setTimeout(resolve, 2000));

      // Clear drafts
      const draftKey = `check_out_draft_${this.bookingId()}`;
      localStorage.removeItem(draftKey);

      this.notifications.show('Check-out completado exitosamente');
      this.router.navigate(['/bookings', this.bookingId(), 'summary']);
    } catch (error) {
      console.error('Error submitting check-out:', error);
      this.notifications.show('Error al guardar el check-out');
    } finally {
      this.isSaving.set(false);
    }
  }

  formatDate(date: Date): string {
    return new Intl.DateTimeFormat('es-AR', {
      weekday: 'short',
      day: 'numeric',
      month: 'short',
      year: 'numeric',
      hour: '2-digit',
      minute: '2-digit'
    }).format(date);
  }
}
