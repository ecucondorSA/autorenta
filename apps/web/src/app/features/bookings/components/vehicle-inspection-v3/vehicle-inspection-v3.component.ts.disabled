export class VehicleInspectionV3Component {
  @Input() mode: 'check-in' | 'check-out' = 'check-in';
  @Input() existingData?: InspectionData;
  @Output() dataChange = new EventEmitter<InspectionData>();
  @Output() complete = new EventEmitter<InspectionData>();

  inspectionPhotos = signal<InspectionPhoto[]>([
    { angle: 'front', label: 'Frente', photo: null, timestamp: null, required: true },
    { angle: 'back', label: 'Trasera', photo: null, timestamp: null, required: true },
    { angle: 'left', label: 'Izquierda', photo: null, timestamp: null, required: true },
    { angle: 'right', label: 'Derecha', photo: null, timestamp: null, required: true },
    { angle: 'interior', label: 'Interior', photo: null, timestamp: null, required: true },
    { angle: 'odometer', label: 'Od√≥metro', photo: null, timestamp: null, required: true },
    { angle: 'fuel', label: 'Combustible', photo: null, timestamp: null, required: true },
    { angle: 'damage1', label: 'Da√±os (opcional)', photo: null, timestamp: null, required: false },
  ]);

  damages = signal<DamageMarker[]>([]);
  odometer = signal<number | null>(null);
  fuelLevel = signal<number | null>(50);
  signature = signal<string | null>(null);

  completedPhotos = computed(() =>
    this.inspectionPhotos().filter(p => p.photo !== null).length
  );

  requiredPhotos = computed(() =>
    this.inspectionPhotos().filter(p => p.required).length
  );

  progressPercentage = computed(() =>
    (this.completedPhotos() / this.inspectionPhotos().length) * 100
  );

  isComplete = computed(() => {
    const requiredCompleted = this.inspectionPhotos()
      .filter(p => p.required)
      .every(p => p.photo !== null);

    return requiredCompleted &&
           this.odometer() !== null &&
           this.fuelLevel() !== null &&
           this.signature() !== null;
  });

  fuelFormatter = (value: number) => `${value}%`;

  async capturePhoto(angle: string) {
    // TODO: Implement actual camera capture
    // For now, simulate with file input
    const input = document.createElement('input');
    input.type = 'file';
    input.accept = 'image/*';
    input.capture = 'environment';

    input.onchange = async (e: any) => {
      const file = e.target?.files?.[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = (event) => {
          this.inspectionPhotos.update(photos =>
            photos.map(p =>
              p.angle === angle
                ? { ...p, photo: event.target?.result as string, timestamp: new Date() }
                : p
            )
          );
          this.onDataChange();
        };
        reader.readAsDataURL(file);
      }
    };

    input.click();
  }

  addDamage() {
    // TODO: Open damage reporting modal
    const newDamage: DamageMarker = {
      id: Date.now().toString(),
      location: 'Nueva ubicaci√≥n',
      severity: 'minor',
      description: 'Descripci√≥n del da√±o',
      photo: null,
    };
    this.damages.update(d => [...d, newDamage]);
    this.onDataChange();
  }

  removeDamage(id: string) {
    this.damages.update(d => d.filter(damage => damage.id !== id));
    this.onDataChange();
  }

  openSignaturePad() {
    // TODO: Implement signature pad modal
    alert('Firma digital - Por implementar');
  }

  onDataChange() {
    const data: InspectionData = {
      photos: this.inspectionPhotos(),
      damages: this.damages(),
      odometer: this.odometer(),
      fuelLevel: this.fuelLevel(),
      signature: this.signature(),
    };
    this.dataChange.emit(data);

    if (this.isComplete()) {
      this.complete.emit(data);
    }
  }
}
