<?xml version="1.0" encoding="utf-8"?>
<!--
   Data extraction rules for Android 12+ (API 31+)
   Controls cloud backup and device-to-device transfer
   https://developer.android.com/about/versions/12/backup-restore
-->
<data-extraction-rules>
    <!-- Rules for cloud backup -->
    <cloud-backup>
        <!-- Include only non-sensitive app preferences -->
        <include domain="sharedpref" path="CapacitorStorage.xml" />
    </cloud-backup>

    <!-- Rules for device-to-device transfer -->
    <device-transfer>
        <!-- Include only non-sensitive app preferences -->
        <include domain="sharedpref" path="CapacitorStorage.xml" />
    </device-transfer>
</data-extraction-rules>
