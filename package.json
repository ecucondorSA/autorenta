{
  "name": "autorenta",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "postinstall": "cd apps/web && npm install",
    "lint": "cd apps/web && npm run lint",
    "lint:fix": "cd apps/web && npm run format && npm run lint -- --fix",
    "test": "cd apps/web && npm run test",
    "test:quick": "cd apps/web && npm run test -- --watch=false --browsers=ChromeHeadless --code-coverage=false",
    "test:coverage": "cd apps/web && npm run test -- --watch=false --browsers=ChromeHeadless --code-coverage=true",
    "build:web": "cd apps/web && npm run build",
    "build:worker": "echo 'Worker build skipped - not implemented yet'",
    "build": "npm run build:web",
    "dev:web": "cd apps/web && npm run start",
    "dev:worker": "cd functions/workers/payments_webhook && npm run dev",
    "dev": "source tools/claude-workflows.sh && dev_setup",
    "deploy:web": "cd apps/web && npm run deploy:pages",
    "deploy:worker": "cd functions/workers/payments_webhook && npm run deploy",
    "deploy": "source tools/claude-workflows.sh && full_deploy",
    "ci": "source tools/claude-workflows.sh && ci_pipeline",
    "install:all": "cd apps/web && npm install && cd ../../functions/workers/payments_webhook && npm install",
    "workflows": "source tools/claude-workflows.sh && workflows_help",
    "sync:types": "tools/sync-types.sh",
    "sync:types:remote": "tools/sync-types.sh --remote",
    "check:skills": "tools/check-skills.sh"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.4.0",
    "puppeteer": "^24.25.0"
  },
  "autorenta": {
    "version": "0.1.0",
    "architecture": "angular-standalone",
    "backend": "supabase",
    "deployment": "cloudflare-pages",
    "patterns": {
      "services": "inject-pattern",
      "components": "standalone-lazy",
      "testing": "jasmine-karma",
      "routing": "lazy-loaded-routes",
      "stateManagement": "signals",
      "storage": "supabase-storage-rls"
    },
    "conventions": {
      "fileNaming": "kebab-case",
      "componentSuffix": ".component.ts",
      "serviceSuffix": ".service.ts",
      "pageSuffix": ".page.ts",
      "modelSuffix": ".model.ts"
    },
    "features": [
      "auth",
      "cars",
      "bookings",
      "payments",
      "admin"
    ],
    "documentation": {
      "architecture": "CLAUDE.md",
      "patterns": "PATTERNS.md",
      "skills": "CLAUDE_SKILLS_GUIDE.md",
      "workflows": "tools/claude-workflows.sh"
    },
    "claude": {
      "skills": {
        "enabled": true,
        "recommended": [
          "angular-scaffolder",
          "supabase-rls-debugger",
          "typescript-sync",
          "test-generator",
          "performance-optimizer",
          "security-auditor"
        ]
      },
      "autoBackground": {
        "enabled": true,
        "timeout": 900000
      }
    }
  }
}
