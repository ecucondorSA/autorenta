
{
  "name": "autorenta",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "nx": "nx",
    "start": "nx serve",
    "build": "nx build",
    "test": "nx test",
    "lint": "nx lint",
    "e2e": "nx e2e",
    "affected": "nx affected",
    "dep-graph": "nx dep-graph",
    "format": "nx format:write",
    "format:write": "nx format:write",
    "format:check": "nx format:check",
    "update": "nx migrate latest",
    "show-affected": "nx affected --base=main...HEAD",
    "show-affected:since": "nx affected --since=origin/main",
    "show-affected:base": "nx affected --base=$NX_BASE --head=$NX_HEAD",
    "prepare": "husky install",
    "compodoc": "compodoc -p tsconfig.doc.json",
    "compodoc:serve": "compodoc -s tsconfig.doc.json",
    "storybook": "nx run-many --target=storybook --projects=ui,shared-ui --parallel",
    "build-storybook": "nx run-many --target=build-storybook --projects=ui,shared-ui --parallel",
    "ci": "nx run-many --target=lint --projects=api,auth,client,email,shared-ui,ui,util --parallel && nx run-many --target=test --projects=api,auth,client,email,shared-ui,ui,util --parallel && nx run-many --target=build --projects=api,auth,client,email,shared-ui,ui,util --parallel",
    "docker:build": "docker build -t autorenta .",
    "docker:run": "docker run -p 3000:3000 autorenta"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.2.1",
    "@nx/cypress": "18.0.7",
    "@nx/eslint-plugin": "18.0.7",
    "@nx/js": "18.0.7",
    "@nx/nest": "18.0.7",
    "@nx/node": "18.0.7",
    "@nx/playwright": "18.0.7",
    "@nx/react": "18.0.7",
    "@nx/vite": "18.0.7",
    "@nx/web": "18.0.7",
    "@nx/webpack": "18.0.7",
    "@playwright/test": "1.41.1",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.11",
    "@svgr/webpack": "^8.1.0",
    "@swc-node/register": "^1.6.8",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.4.0",
    "@testing-library/react": "^14.0.0",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "babel-plugin-named-exports-order": "^0.0.2",
    "cypress": "^13.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-cypress": "^2.13.4",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.6",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.0",
    "nx": "18.0.7",
    "prettier": "^3.1.0",
    "react-refresh": "^0.14.0",
    "sass": "^1.69.5",
    "storybook": "^7.6.7",
    "style-loader": "^3.3.3",
    "typescript": "~5.3.3",
    "vite": "^5.0.0",
    "vite-plugin-eslint": "^2.0.0",
    "vite-tsconfig-paths": "^4.0.2",
    "webpack": "^5.89.0"
  },
  "dependencies": {
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.0",
    "@nestjs/platform-express": "^10.2.0",
    "@nestjs/swagger": "^7.1.17",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "tslib": "^2.4.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": ["eslint --fix", "prettier --write"],
    "*.{json,md,css,scss}": ["prettier --write"]
  }
}
