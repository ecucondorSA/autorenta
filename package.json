{
  "name": "autorenta",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "postinstall": "cd apps/web && npm install",
    "_comment_dev": "=== DEVELOPMENT ===",
    "dev": "./tools/run.sh dev",
    "dev:web": "./tools/run.sh dev:web",
    "dev:worker": "./tools/run.sh dev:worker",
    "dev:stop": "./tools/run.sh dev:stop",
    "_comment_test": "=== TESTING ===",
    "test": "./tools/run.sh test",
    "test:quick": "./tools/run.sh test:quick",
    "test:coverage": "./tools/run.sh test:coverage",
    "test:e2e": "./tools/run.sh test:e2e",
    "test:e2e:ui": "./tools/run.sh test:e2e:ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:booking": "playwright test tests/renter/booking",
    "test:e2e:wallet": "playwright test tests/renter/booking/payment-wallet.spec.ts",
    "test:e2e:card": "playwright test tests/renter/booking/payment-card.spec.ts",
    "test:e2e:success": "playwright test tests/renter/booking/success-page.spec.ts",
    "test:e2e:report": "playwright show-report",
    "test:coverage:report": "cd apps/web && bash scripts/generate-coverage-report.sh",
    "_comment_build": "=== BUILDING ===",
    "build": "./tools/run.sh build",
    "build:web": "./tools/run.sh build:web",
    "build:worker": "./tools/run.sh build:worker",
    "_comment_deploy": "=== DEPLOYMENT ===",
    "deploy": "./tools/run.sh deploy",
    "deploy:web": "./tools/run.sh deploy:web",
    "deploy:worker": "./tools/run.sh deploy:worker",
    "_comment_ci": "=== CI/CD ===",
    "ci": "./tools/run.sh ci",
    "lint": "./tools/run.sh lint",
    "lint:fix": "./tools/run.sh lint:fix",
    "format": "./tools/run.sh format",
    "check:guidelines": "./tools/check-dev-guidelines.sh",
    "_comment_utils": "=== UTILITIES ===",
    "install": "./tools/run.sh install",
    "install:all": "./tools/run.sh install",
    "clean": "./tools/run.sh clean",
    "sync:types": "./tools/run.sh sync:types",
    "sync:types:remote": "./tools/run.sh sync:types:remote",
    "status": "./tools/run.sh status",
    "_comment_setup": "=== SETUP (one-time) ===",
    "setup:auth": "./tools/run.sh setup:auth",
    "setup:prod": "./tools/run.sh setup:prod",
    "_comment_monitor": "=== MONITORING ===",
    "monitor:health": "./tools/run.sh monitor:health",
    "monitor:wallet": "./tools/run.sh monitor:wallet",
    "check:auth": "./tools/run.sh check:auth",
    "_comment_legacy": "=== LEGACY (kept for compatibility) ===",
    "workflows": "./tools/run.sh help",
    "check:skills": "tools/check-skills.sh",
    "accounting:export": "node tools/accounting/export-ledger.mjs",
    "types:db:gen": "supabase gen types typescript --project-id obxvffplochgeiclibng > supabase.types.generated.ts",
    "types:db:check": "npm run types:db:gen && git diff --exit-code supabase.types.generated.ts",
    "monitoring:setup": "./tools/monitoring-setup.sh",
    "monitoring:health": "./tools/run.sh monitor:health",
    "monitoring:deploy": "supabase functions deploy monitoring-health-check && supabase functions deploy monitoring-alerts && supabase functions deploy monitoring-metrics"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.4.0",
    "@playwright/test": "^1.56.1",
    "@supabase/supabase-js": "^2.76.0",
    "@types/flatpickr": "^3.0.2",
    "@types/uuid": "^10.0.0",
    "dotenv": "^17.2.3",
    "fast-check": "^4.3.0",
    "playwright": "^1.56.1",
    "puppeteer": "^24.25.0",
    "uuid": "^13.0.0"
  },
  "autorenta": {
    "version": "0.1.0",
    "architecture": "angular-standalone",
    "backend": "supabase",
    "deployment": "cloudflare-pages",
    "patterns": {
      "services": "inject-pattern",
      "components": "standalone-lazy",
      "testing": "jasmine-karma",
      "routing": "lazy-loaded-routes",
      "stateManagement": "signals",
      "storage": "supabase-storage-rls"
    },
    "conventions": {
      "fileNaming": "kebab-case",
      "componentSuffix": ".component.ts",
      "serviceSuffix": ".service.ts",
      "pageSuffix": ".page.ts",
      "modelSuffix": ".model.ts"
    },
    "features": [
      "auth",
      "cars",
      "bookings",
      "payments",
      "admin"
    ],
    "documentation": {
      "architecture": "CLAUDE.md",
      "patterns": "PATTERNS.md",
      "skills": "CLAUDE_SKILLS_GUIDE.md",
      "workflows": "tools/claude-workflows.sh"
    },
    "claude": {
      "skills": {
        "enabled": true,
        "recommended": [
          "angular-scaffolder",
          "supabase-rls-debugger",
          "typescript-sync",
          "test-generator",
          "performance-optimizer",
          "security-auditor"
        ]
      },
      "autoBackground": {
        "enabled": true,
        "timeout": 900000
      }
    }
  },
  "dependencies": {
    "@supabase/storage-js": "^2.78.0",
    "mapbox-gl": "^3.16.0",
    "shepherd.js": "^14.5.1",
    "zod": "^4.1.12"
  }
}
