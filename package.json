
{
  "name": "autorenta",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "install": "if [ -z \"$AUTORENTA_SKIP_INSTALL\" ]; then pnpm install; fi",
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "compodoc": "npx compodoc -p tsconfig.doc.json",
    "compodoc:serve": "npx compodoc -s tsconfig.doc.json",
    "storybook": "ng run web:storybook",
    "build-storybook": "ng run web:build-storybook",
    "chromatic": "npx chromatic",
    "prepare": "husky install",
    "test:ci": "vitest run --coverage",
    "deploy:web": "wrangler pages deploy dist/apps/web --project-name=autorenta-web",
    "deploy:api": "wrangler deploy apps/api/src/index.ts --name autorenta-api",
    "deploy:all": "run-p deploy:*",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "axe": "playwright test --config playwright-axe.config.ts",
    "axe:ui": "playwright test --ui --config playwright-axe.config.ts",
    "axe:headed": "playwright test --headed --config playwright-axe.config.ts",
    "axe:debug": "playwright test --debug --config playwright-axe.config.ts",
    "axe:report": "playwright test --reporter html --config playwright-axe.config.ts",
    "axe:update": "playwright test --update-snapshots --config playwright-axe.config.ts"
  },
  "dependencies": {},
  "devDependencies": {
    "@angular-devkit/build-angular": "~17.3.0",
    "@angular-eslint/builder": "17.2.1",
    "@angular-eslint/eslint-plugin": "17.2.1",
    "@angular-eslint/eslint-plugin-template": "17.2.1",
    "@angular-eslint/schematics": "17.2.1",
    "@angular-eslint/template-parser": "17.2.1",
    "@angular/cli": "~17.3.0",
    "@angular/compiler-cli": "~17.3.0",
    "@angular/language-service": "~17.3.0",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@nx/eslint-plugin-nx": "18.0.7",
    "@nx/jest": "18.0.7",
    "@nx/js": "18.0.7",
    "@nx/playwright": "18.0.7",
    "@nx/workspace": "18.0.7",
    "@playwright/test": "1.57.0",
    "@schematics/angular": "~17.3.0",
    "@storybook/addon-essentials": "^8.0.0-beta.5",
    "@storybook/addon-interactions": "^8.0.0-beta.5",
    "@storybook/addon-links": "^8.0.0-beta.5",
    "@storybook/angular": "^8.0.0-beta.5",
    "@storybook/blocks": "^8.0.0-beta.5",
    "@storybook/test-runner": "^0.16.0",
    "@types/jest": "~29.5.0",
    "@types/node": "20.11.24",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "chromatic": "^10.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-cypress": "^2.13.4",
    "eslint-plugin-storybook": "^0.6.15",
    "husky": "^9.0.0",
    "jest": "~29.7.0",
    "jest-environment-jsdom": "~29.7.0",
    "jest-preset-angular": "~13.1.0",
    "lint-staged": "^15.0.0",
    "ng-packagr": "~17.3.0",
    "npm-run-all": "^4.1.5",
    "nx": "18.0.7",
    "prettier": "^3.1.0",
    "ts-jest": "~29.1.0",
    "ts-node": "10.9.2",
    "typescript": "~5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.+(js|json|ts|tsx|css|md|scss|less|html|graphql|gql|yml|yaml)": [
      "prettier --write"
    ]
  }
}
